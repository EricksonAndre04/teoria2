# Usa una imagen base de .NET SDK para compilar la aplicaci贸n
FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /app

# Copia los archivos del proyecto al contenedor
COPY . .

# Restaura las dependencias y compila la aplicaci贸n
RUN dotnet restore
RUN dotnet publish -c Release -o out

# Usa una imagen base de .NET Runtime para ejecutar la aplicaci贸n
FROM mcr.microsoft.com/dotnet/runtime:7.0
WORKDIR /app
COPY --from=build /app/out .

# Comando para ejecutar la aplicaci贸n
ENTRYPOINT ["dotnet", "MiAplicacion.dll"]
